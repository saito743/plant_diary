<% users.each do |user| %>
  <div>
    <%= link_to user_path(user) do %>
        <%= attachment_image_tag(user, :image, :fill, 300, 300, fallback: "no_image.jpg") %>
        <%= user.name %>
    <% end %>
      <div>
        <% if current_user.following?(user) %>
  		    <%= link_to "フォロー解除", user_follows_path(user),remote: true, method: :delete %>
  	    <% else %>
  		   <%= link_to "フォローする", user_follows_path(user),remote: true, method: :post %>
  	    <% end %>
      </div>
  </div>
<% end %>