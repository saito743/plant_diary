<div>
  <%= form_for [plant, tree] do |f| %>
    <div class="img-prv">
      <%= image_tag "no_image.jpg",size:'200x200',id: "img_prev" %>
		  <%= f.attachment_field :image, id: "post_img" %>
      <%= javascript_include_tag 'img-prev' %>
    </div>
    <div>
      <%= f.label :title,"タイトル" %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :body,"本文" %>
      <%= f.text_field :body %>
    </div>
    <div>
      <%= f.label :ask_for_help, "Help" %>
      <%= f.check_box :ask_for_help, {} , true, false %>
    </div>
      <%= f.submit "投稿する" %>
  <% end %>
</div>