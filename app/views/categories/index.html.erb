<h1><%= @category.name %></h1>

<div>
  <% @plants.each do |plant| %>
  <div>
  	<%= link_to plant_path(plant) do %>
  	  <%= attachment_image_tag(plant, :image, :fill, 200, 200) %>
  	  <%= plant.name %>
  	  <%= plant.body %>
  	<% end %>
  </div>
<% end %>
</div>
<!-- サイドバー -->
<div>
  <div>
    <h3><%= @category_1.name %></h3>
    <%= render "categories/sideber", plants: @plant_1 %>
  </div>

  <div>
    <h3><%= @category_2.name %></h3>
      <%= render "categories/sideber", plants: @plant_2 %>
  </div>
</div>