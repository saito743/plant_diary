<div class="container">
  <div class="row justify-content-center user-edit-page">
    <div class="col-12 title">
      <h1>プロフィール編集</h1>
    </div>
    <div class="error-msg">
      <%= render "layouts/error_msg", model: @user %>
    </div>
      <%= form_for(@user) do |f| %>
        <div class="row justify-content-center user-edit-form">
          <div class="img-prv col-lg-6">
            <%= image_tag "no_image.jpg",size:'300x300',id: "img_prev" %>
            <%= f.attachment_field :image, id: "post_img" %>
            <%= javascript_include_tag 'img-prev' %>
          </div>
          <div class="col-lg-6 user-edit-text">
            <div class="row user-form">
              <div class="col-4"><%= f.label :name,"名前" %></div>
              <%= f.text_field :name %>
            </div>
            <div class="row user-form">
              <div class="col-4"><%= f.label :like_plant,"好きな植物" %></div>
              <%= f.text_field :like_plant %>
            </div>
            <div class="row user-form">
              <div class="col-4"><%= f.label :introduction,"自己紹介" %></div>
              <%= f.text_area :introduction %>
            </div>
          </div>
        </div>
        <div class="row justify-content-center user-edit-form">
          <%= f.submit "編集を保存する", class: "btn btn-info col-3" %>
        </div>
      <% end %>
  </div>
    <div class="row justify-content-end">
      <%= link_to "ログイン情報を変更する", edit_user_registration_path, class: "btn btn-success btn-space" %>
      <%= link_to "退会する",user_unsubscribe_path(@user), class: "btn btn-outline-danger btn-space" %>
    </div>
</div>