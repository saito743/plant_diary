<div class="row justify-content-center">
  <div class="profile">
    <%= attachment_image_tag(user, :image, :fill, 270, 270, fallback: "no_image.jpg")%>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-8">
    <span class="user-name"><%= user.name %></span>
    <div class="profile-text">
      <span class="user-item">自己紹介</span><br>
      <span class="profile-text"><%= user.introduction %></span><br>
      <span class="user-item">好きな植物：</span>
      <%= user.like_plant %><br>
    </div>
  </div>
</div>
<div class="row justify-content-center">
  <div class="follow_btn col-6">
    <%= render "follows/follow_btn", user: @user %>
  </div>
  <div class="follow_user_count">
    <%= render "follows/follow_user_count", user: @user %>
  </div>
</div>